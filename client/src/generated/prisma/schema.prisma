generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "windows", "darwin-arm64"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String   @id @unique
  email        String   @unique
  firstName    String
  lastName     String
  profileImage String
  createdAt    DateTime @default(now())
}

model MandiLatLong {
  id          Int    @id @default(autoincrement())
  State       String
  Mandi       String
  Mandi_Hindi String
  Latitude    Float?
  Longitude   Float?
}

model Truck {
  id                    Int    @id @default(autoincrement())
  State                 String
  TruckDriverName       String
  TruckDriverName_Hindi String
  TruckNumberPlate      String @unique
  Latitude              Float?
  Longitude             Float?
}

model VoiceResponse {
  id        String   @id @default(cuid())
  crop      String
  market    String
  quantity  String
  Latitude  Float?
  Longitude Float?
  createdAt DateTime @default(now())
}
